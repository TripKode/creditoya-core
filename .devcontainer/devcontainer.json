{
    "name": "CreditoYa Development Environment",
    "build": {
      "dockerfile": "Dockerfile.dev"
    },
    "features": {
      "ghcr.io/devcontainers/features/git:1": {},
      "ghcr.io/devcontainers/features/docker-in-docker:2": {
        "version": "latest",
        "enableNonRootDocker": "true"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "bradlc.vscode-tailwindcss",
          "ms-vscode.vscode-typescript-next",
          "esbenp.prettier-vscode",
          "ms-vscode.vscode-json",
          "Prisma.prisma",
          "ms-vscode.vscode-eslint",
          "ms-playwright.playwright",
          "humao.rest-client",
          "GitLab.gitlab-workflow",
          "ms-vscode.remote-containers"
        ],
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash",
          "typescript.preferences.importModuleSpecifier": "relative",
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
          }
        }
      }
    },
    "forwardPorts": [3000, 8080, 5432],
    "portsAttributes": {
      "3000": {
        "label": "NestJS Dev Server",
        "onAutoForward": "notify"
      },
      "8080": {
        "label": "NestJS Production",
        "onAutoForward": "silent"
      },
      "5432": {
        "label": "PostgreSQL",
        "onAutoForward": "silent"
      }
    },
    "mounts": [
      "source=${localWorkspaceFolder}/node_modules,target=/app/node_modules,type=bind,consistency=cached",
      "source=${localWorkspaceFolder}/.git,target=/app/.git,type=bind,consistency=cached"
    ],
    "postCreateCommand": "npm install && npx prisma generate",
    "postStartCommand": "npm run start:dev",
    "remoteUser": "node",
    "workspaceFolder": "/app",
    "remoteEnv": {
      "NODE_ENV": "development"
    }
  }